<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sherpasteven.sscte" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashPage"
            android:label="@string/title_activity_splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sherpasteven.sscte.HomeActivity" />
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_splash"
            android:parentActivityName=".HomeActivity" >
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sherpasteven.sscte.HomeActivity" />
        </activity>
        <activity
            android:name=".AddCardActivity"
            android:label="@string/title_activity_add_card"
            android:parentActivityName=".InventoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sherpasteven.sscte.InventoryActivity" />
        </activity>
        <activity
            android:name=".EditCardActivity"
            android:label="@string/title_activity_edit_card"
            android:parentActivityName=".InventoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sherpasteven.sscte.InventoryActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sherpasteven.sscte.HomeActivity" />
        </activity>
    </application>

</manifest>
