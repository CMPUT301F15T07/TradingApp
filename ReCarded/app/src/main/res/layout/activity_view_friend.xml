<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sherpasteven.sscte.ViewFriendActivity"
    android:scrollIndicators="right"
    android:nestedScrollingEnabled="true">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:id="@+id/greyRect"
        android:src="@drawable/img_no_img"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:paddingEnd="-100dp"
        android:paddingStart="-100dp"
        android:background="#d8d8d8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Friend Name"
        android:id="@+id/txtName"
        android:fontFamily="sans-serif"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_below="@+id/greyRect"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City:"
        android:id="@+id/txtCity"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtName"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample city"
        android:id="@+id/cityInfo"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/txtCity"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:id="@+id/txtEmail"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cityInfo"
        android:layout_alignStart="@+id/txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="email@sample.com"
        android:id="@+id/emailinfo"
        android:fontFamily="sans-serif"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignStart="@+id/txtName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteFriend"
        android:background="@drawable/btn_cancel"
        android:layout_below="@id/greyRect"
        android:layout_alignEnd="@id/greyRect"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="15dp" /> />


</RelativeLayout>
