<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnAddItem" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddItem"
        android:src="@drawable/ic_plus_lg"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/btnEditItem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit an item"
        android:id="@+id/btnEditItem"
        android:layout_marginRight="2dp"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/btnViewItem"
        android:layout_alignEnd="@+id/btnViewItem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View an item"
        android:id="@+id/btnViewItem"
        android:layout_marginRight="2dp"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>