<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sherpasteven.sscte.ProfileActivity"
        android:scrollIndicators="right"
        android:nestedScrollingEnabled="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greyRect"
            android:src="@drawable/mask_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgNoImage"
            android:layout_alignTop="@+id/greyRect"
            android:src="@drawable/grey_rectangle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgLine"
            android:src="@drawable/input_line"
            android:layout_alignBottom="@+id/greyRect"
            android:layout_alignEnd="@+id/greyRect"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgPen"
            android:src="@drawable/input_pencil"
            android:layout_alignTop="@+id/imgLine"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/imgLine"
            android:layout_alignEnd="@+id/greyRect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nameText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name:"
            android:id="@+id/lblName"
            android:layout_gravity="left|center_vertical"
            android:paddingStart="5dp"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:layout_marginBottom="-35dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/nameText"
            android:background="@drawable/read_line"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textColor="#444444"
            android:maxLines="1"
            android:nestedScrollingEnabled="true"
            android:paddingStart="10dp"
            android:layout_below="@+id/greyRect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingEnd="50dp" />

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_alignTop="@+id/greyRect"
            android:layout_toStartOf="@+id/imgNoImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="City:"
            android:id="@+id/txtCity"
            android:layout_gravity="left|center_vertical"
            android:paddingStart="5dp"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/cityText"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="-25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/cityText"
            android:background="@drawable/read_line"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textColor="#444444"
            android:maxLines="1"
            android:nestedScrollingEnabled="true"
            android:paddingStart="10dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/nameText"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email:"
            android:id="@+id/txtEmail"
            android:layout_gravity="left|center_vertical"
            android:paddingStart="5dp"
            android:fontFamily="sans-serif"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/emailText"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="-25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/emailText"
            android:background="@drawable/read_line"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textColor="#444444"
            android:maxLines="1"
            android:inputType="textWebEmailAddress"
            android:nestedScrollingEnabled="true"
            android:paddingStart="10dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/cityText"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="94dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="SUBMIT"
            android:id="@+id/btnEnter"
            android:background="@drawable/curved_rect"
            android:layout_gravity="end|bottom"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/material_grey_900"
            android:layout_marginBottom="17dp"
            android:layout_below="@+id/emailText"
            android:layout_marginEnd="0dp"
            android:nestedScrollingEnabled="true" />

    </RelativeLayout>
</ScrollView>
